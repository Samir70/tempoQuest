      <h2><%= pluralize(study.errors.count, "error") %> prohibited this study from being saved:</h2>

      <ul>
        <% study.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :target_tempo, style: "display: block" %>
    <%= form.number_field :target_tempo %>
  </div>

  <div>
    <%= form.label :cur_tempo, style: "display: block" %>
    <%= form.number_field :cur_tempo %>
  </div>

  <div>
    <%= form.label :backing_track, style: "display: block" %>
    <%= form.text_field :backing_track %>
  </div>

  <div>
    <%= form.label :style_id, style: "display: block" %>
    <%= form.select :style_id, style_options.map {|el| [el.name, el.id]} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
